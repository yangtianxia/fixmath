{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"noEmitOnError": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"pretty": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2018",
		"useDefineForClassFields": false
	},
	"include": [
    "src/**/*.ts",
		"src/**/*.d.ts",
    "rollup.config.ts"
  ],
	"exclude": [
    "dist",
    "node_modules"
  ]
}